{
	"chat.commandCenter.enabled": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.esling": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line-thin",
  "editor.cursorSurroundingLines": 15,
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 12.5,
  "editor.lineHeight": 2,
	"editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "editor.rulers": [80, 120],
  "editor.semanticHighlighting.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-lock*, package-lock*, bun.lock",
    "tailwind.config*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*"
  },
  "go.toolsManagement.autoUpdate": true,
  "javascript.suggest.autoImports": true,
  "makefile.configureOnOpen": false,
  "symbols.files.associations": {
    "*.sh": "code-green"
  },
  "symbols.folders.associations": {
    "apache": "folder-green",
    "business": "folder-services",
    "controllers": "folder-red",
    "crud": "folder-config",
    "foundation": "folder-",
    "migrations": "folder-database",
    "model": "folder-models",
    "templates": "folder-layout",
    "vendor": "folder-yellow"
  },
  "symbols.hidesExplorerArrows": false,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 14,
	"typescript.suggest.autoImports": true,
  "window.commandCenter": false,
  "window.menuBarVisibility": "hidden",
  "window.titleBarStyle": "custom",
  "workbench.editor.labelFormat": "short",
  "workbench.iconTheme": "symbols",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": false,
  "vim.useSystemClipboard": true,
	"vim.useCtrlKeys": true,
	"vim.hlsearch": true,
	"vim.leader": "<space>",
	"vim.normalModeKeyBindingsNonRecursive": [
		{ "before": ["<S-h>"], "commands": [":bprevious"] },
		{ "before": ["<S-l>"], "commands": [":bnext"] },
		{ "before": ["<S-j>"], "commands": ["workbench.action.togglePanel"] },

		{ "before": ["<leader>", "v"], "commands": [":vsplit"] },
		{ "before": ["<leader>", "s"], "commands": [":split"] },

		{
			"before": ["<C-h>"],
			"commands": ["workbench.action.focusLeftGroup"],
		},
		{
			"before": ["<C-j>"],
			"commands": ["workbench.action.focusBelowGroup"],
		},
		{
			"before": ["<C-k>"],
			"commands": ["workbench.action.focusAboveGroup"],
		},
		{
			"before": ["<C-l>"],
			"commands": ["workbench.action.focusRightGroup"],
		},

		{
			"before": ["<leader>", "n", "e"],
			"commands": ["workbench.explorer.fileView.focus"],
		},

		{ "before": ["<leader>", "f"], "commands": ["workbench.action.quickOpen"] },
		{ "before": ["<leader>", "p"], "commands": ["workbench.action.formatDocument"] },
		{ "before": ["g", "h"], "commands": ["editor.action.showDefinitionPreviewHover"] },

		{ "before": ["<leader>", "x"], "commands": [":bd"] },
	],
	"workbench.activityBar.location": "hidden",
  "workbench.editor.empty.hint": "hidden",
  "workbench.colorTheme": "Oscura Dusk",
  "editor.insertSpaces": false,
  "editor.detectIndentation": false,
  "pythonIndent.useTabOnHangingIndent": true,
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
	"pythonIndent.keepHangingBracketOnLine": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"terminal.integrated.tabs.location": "left",
	"security.workspace.trust.untrustedFiles": "open",
	"[vue]": {
		"editor.defaultFormatter": "Vue.volar"
	}
}
